<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="150dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_subject"
        android:id="@+id/dpSubjectText"
        android:layout_margin="@dimen/linear_layout_padding"
        android:width="@dimen/row_title_text_width_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_marks"
        android:id="@+id/dpSubjectMarksText"
        android:layout_marginTop="@dimen/linear_layout_padding"
        android:layout_marginRight="@dimen/linear_layout_padding"
        android:layout_marginEnd="@dimen/linear_layout_padding"
        android:layout_marginBottom="@dimen/linear_layout_padding" />

</LinearLayout>