<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/linear_layout_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="@string/marks_percentage_range_text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="@string/above_percentage_text"/>

        <EditText
            android:id="@+id/editGradeScoreInput"
            android:layout_width="wrap_content"
            android:width="@dimen/edit_text_width"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/range_percentage_hint"
            android:maxLines="1"
            android:maxLength="2">
            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="@string/percentage_symbol" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="@string/grade_character_entry_text"/>

    <EditText
        android:id="@+id/editGradeCharInput"
        android:layout_width="wrap_content"
        android:width="@dimen/edit_text_width"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters"
        android:hint="@string/grade_character_entry_hint"
        android:digits="ABCDEGHIJKLMNOQRSTUVWXYZ123+-*"
        android:maxLines="1"
        android:maxLength="3">
    </EditText>

</LinearLayout>